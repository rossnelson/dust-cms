
- title @album.title
- description @album.description

= render_region "interior-content" do
  .block.columns.twelve
    .block-content
      %h1= @album.title
      - unless @album.description.blank?
        %p= @album.description

= render_region "album-photos" do
  - @album.photos.each do |photo|
    .block.columns.three
      = image_tag photo.filename.url(:thumb)


